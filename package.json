{
  "name": "ephemeralkey",
  "version": "0.0.0-development",
  "description": "EphemeralKey for Decentraland",
  "main": "dist/index.js",
  "typings": "./dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc --project tsconfig-build.json",
    "prewatch": "rm -rf dist",
    "watch": "tsc --watch --project tsconfig-build.json",
    "test": "env PORT=3001 npm run test:node",
    "test:node": "nyc mocha --require ts-node/register test/*.spec.ts --exit",
    "test:browsers": "karma start --single-run --browsers ChromeHeadless,FirefoxHeadless karma.conf.js",
    "test:all-browsers": "karma start --single-run --browsers ChromeHeadless,FirefoxHeadless karma.conf.js",
    "test:all": "./scripts/tests.sh",
    "test:circle": "./scripts/test-circle.sh",
    "semantic-release": "semantic-release",
    "commit-msg": "validate-commit-msg"
  },
  "nyc": {
    "all": true,
    "include": [
      "src"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/decentraland/ephemeralkey.git"
  },
  "keywords": [
    "decentraland"
  ],
  "author": "Decentraland",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/decentraland/ephemeralkey/issues"
  },
  "homepage": "https://github.com/decentraland/ephemeralkey#readme",
  "dependencies": {
    "@types/secp256k1": "^3.5.0",
    "eth-connect": "^0.3.1",
    "formdata-node": "^1.0.1",
    "readable-stream-clone": "0.0.4",
    "secp256k1": "^3.5.2",
    "typescript": "^2.9.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.5",
    "@types/websocket": "0.0.40",
    "axios": "^0.18.0",
    "blob": "0.0.4",
    "browserify": "^16.2.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cors": "^2.8.4",
    "dcl-tslint-config-standard": "^1.0.1",
    "express": "^4.16.3",
    "husky": "^1.0.1",
    "karma": "^3.0.0",
    "karma-browserify": "^5.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-typescript": "^3.0.13",
    "mocha": "^5.2.0",
    "node-fetch": "^2.2.0",
    "nyc": "^13.0.1",
    "prettier": "^1.10.2",
    "semantic-release": "^15.9.16",
    "ts-node": "^7.0.1",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.10.0",
    "tslint-language-service": "^0.9.9",
    "tslint-plugin-prettier": "^1.3.0",
    "validate-commit-msg": "^2.14.0",
    "websocket": "^1.0.26"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "semi": false
  }
}
